<section id="forms"  style="margin-left: 30%;">
    <div class="col-md-5">
    <br>
      <form class="form-horizontal well" action="<%=@callback_method %>" method="post" > 
        <fieldset>
          <legend>Create New Workshop</legend>
          <br>
          <% if !@errors.empty? %>
             <legend style="color: red;  font-weight: bold; font-size: 14px;"
              <p>The Following Errors Were Encountered: </p>
              <% @errors.each do |e| %>
                <p><%=e%></p>
              <% end %>
            </legend>
          <% end %>

          <div class="control-group" >
              <label class="control-label" for="textarea">Workshop Name</label> 
              <input type="text" class="form-control" name="name"  required >

            <label class="control-label" for="textarea">Event Date</label>
            <input type="text" class="form-control" name="date"  title="Enter Event Date" placeholder="Event Date" id="dp1" > 
               
              <hr>
              <div class="form-actions">
                <button type="submit" class="btn btn-success" title="Select to Save Workshop Information">Save</button>
                <button type="reset" class="btn" onclick="history.go(-1);">Cancel</button>
              </div>
        </fieldset>
      </form>
    </div>
</section>
