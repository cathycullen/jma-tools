
<section id="forms" style="margin-left: 5%;">
  <div class="row">
    <div class="col-md-4">
      <!-- <a href="http://www.jodymichael.com"><img src="http://www.jodymichael.com/filebin/images/logo.png" alt="<= @reference %>" style=" margin-bottom: 30px;"></a>
      -->
      <br>
      <form class="form-horizontal well" action="/send_welcome_email" method="post" style="margin-top:20%;">
        <fieldset>
          <legend>Generate Client Welcome Email</legend>
          <div class="control-group" >
            <div class="col-md-8">
              <label class="control-label" for="textarea">Name</label> 
              <input type="text" class="form-control" name="name" title="Enter Recipients Name" placeholder="Name" required >
              <label class="control-label" for="textarea">Email</label>
              <input type="text" class="form-control" name="email"  title="Enter Recipients Email" placeholder="Email" required >
              
              <label class="control-label" for="textarea">Appointment Date</label>
              <input type="text" class="form-control" name="appt_date"  title="Enter Appt Date" placeholder="Appt Date" id="dp1" > 
              <label class="control-label" for="textarea">Payment Due Date</label>
              <input type="text" class="form-control" name="payment_date"  title="Enter Payment Due Date" placeholder="Payment Date" id="dp2" > 
              
              <label class="control-label" >Start Time</label>
              <select class="form-control" style="width:45%;" name="appt_start">
              <% tp = [[5, 7, "am"], [12, 1, "pm"], [1, 10, "pm"]]  %>
              <% i =0 %>
              <% 3.times  do %>
                <% time_period = tp[i] %>
                <% start_hour= time_period[0] %>
                <% hours = time_period[1] %>
                <% ampm = time_period[2] %>
                <% hours.times do %>
                  <% mm = 0 %>
                  <% 4.times do %> 
                    <option value="<%= start_hour %>:<%=sprintf( "%02d", mm )%> <%= ampm %>"><%= start_hour %>:<%=sprintf( "%02d", mm )%> <%= ampm %></option>
                    <% mm = mm +15 %>
                  <% end %>
                  <% start_hour= start_hour + 1%>
                <% end %>
                <% i = i + 1 %>
              <% end %>
              </select>
              <label class="control-label" >End Time</label>
              <select class="form-control" style="width:45%;" name="appt_end">
              <% tp = [[5, 7, "am"], [12, 1, "pm"], [1, 10, "pm"]]  %>
              <% i =0 %>
              <% 3.times  do %>
                <% time_period = tp[i] %>
                <% start_hour= time_period[0] %>
                <% hours = time_period[1] %>
                <% ampm = time_period[2] %>
                <% hours.times do %>
                  <% mm = 0 %>
                  <% 4.times do %> 
                    <option value="<%= start_hour %>:<%=sprintf( "%02d", mm )%> <%= ampm %>"><%= start_hour %>:<%=sprintf( "%02d", mm )%> <%= ampm %></option>
                    <% mm = mm +15 %>
                  <% end %>
                  <% start_hour= start_hour + 1%>
                <% end %>
                <% i = i + 1 %>
              <% end %>
              </select>
              <label class="control-label" for="textarea">Payment Amount</label>
              <input type="text" class="form-control" name="amount"  title="Enter Payment Amount" placeholder="Optional Amount" >

              <label class="control-label" for="textarea">Coach</label>  
                <select name="coach_name" style="width:100%; ">
                  <% coaches.each do |coach|%>         
                    <option value="<%= coach.name %>"><%= coach.name %></option>
                  <% end %>
                </select>

              <label class="control-label" for="textarea">Location</label>            
              <select name="location" style="width:100%; ">
                <option value="Downtown">Downtown</option>
                <option value="Northside">Northside</option>
              </select>


              <label class="control-label" for="textarea">Category</label>  
                <select name="category" style="width:100%; ">
                  <% categories.each do |category|%>         
                    <option value="<%= category.name %>"><%= category.name %></option>
                  <% end %>
                </select>
              
              <!--
              <label class="control-label" for="textarea">Textarea</label>
              <textarea class="form-control input-xlarge" id="textarea" rows="5"  placeholder="Body"></textarea>
              <label class="control-label" for="textarea">Formatted Results</label>
              <textarea class="form-control input-xlarge" id="textarea" rows="8"  placeholder="Can We Show Formatted Results Here?"></textarea>
              -->
              <hr>
              <div class="form-actions">
                <button type="submit" class="btn btn-success" title="Select to Send Payment Link to Client">Send Email</button>
                <button type="reset" class="btn">Cancel</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
  </div>
</section>
