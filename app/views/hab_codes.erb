<div class="container">
  
  <!-- upper section -->
  <div class="row">
    
    <div class="col-sm-12">
      <!-- column 2 --> 
       <h3><i class="glyphicon gglyphicon-bullhorn"></i> &nbsp JMA Assigned Hab Codes</h3>  
       <hr>
        <!--<table class="table table-condensed table-bordered table-striped table-hover table-responsive" > -->
        <table class="table table-striped table-bordered table-striped table-hover">
         <thead>




          <tr>
            <th >Hab Code</th>
            <th >Coach</th>
            <th >First</th>
            <th >Last</th>
            <th >Date Sent</th>
            <th >Registered</th>
            <th >Completed</th>
            <th >Debriefed</th>
            <th >Reports Sent</th>
            <th >Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @hab_codes != nil && @hab_codes.size > 0 %>
            <% @hab_codes.each do |entry| %>
              <tr>
                <td><%= entry[:code] %></td>
                <td><%=entry.coach.name%></td>
                <td><%= entry[:first_name] %></td>
                <td><%= entry[:last_name] %></td>
                <% if !entry[:date_sent].nil? %>
                  <td><%= entry[:date_sent].strftime("%m/%d/%Y") %></td>
                <% else %>
                  <td></td>
                <% end %>
                <% if entry[:registered] == true  %>
                  <td >yes</td>
                <% else %>
                  <td>no</td>
                <% end  %>
               
                <% if !entry[:completed].nil? %>
                  <td> <%= entry[:completed].strftime("%m/%d/%Y") %></td>
                <% else %>
                  <td></td>
                <% end %>

                <% if entry[:debriefed] == true  %>
                  <td >yes</td>
                <% else %>
                  <td>no</td>
                <% end  %>
                <% if entry[:report_sent] == true  %>
                  <td >yes</td>
                <% else %>
                  <td>no</td>
                <% end  %>
               
                
                <td>
                <a href="/edit_hab_code?id=<%= entry[:id]%>" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="/delete_hab_code?id=<%= entry[:id]%>" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
                <a href="/email_hab_code?id=<%= entry[:id]%>" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-envelope"></span>
                </a>
                </td>
              </td>
              </tr> 
            <% end %> 
          <% end %> 
        </tbody>
      </table>
      </div>
    </div> <div class="row">
    <div class="col-sm-2">
      
    </div><!-- /span-3 -->
    <div class="col-sm-10">
      <!-- column 2 --> 
       <h3><i class="glyphicon gglyphicon-bullhorn"></i> &nbsp Unassigned Hab Codes</h3>  
       <hr>
        <!--<table class="table table-condensed table-bordered table-striped table-hover table-responsive" > -->
        <table class="table table-striped table-bordered table-striped table-hover">
         <thead>
          <tr>
            <th >Hab Code</th>
            <th >Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @unassigned_hab_codes != nil && @unassigned_hab_codes.size > 0 %>
            <% @unassigned_hab_codes.each do |entry| %>
              <tr>
                <td><%= entry[:code] %></td> 
                <td>
                <a href="/edit_hab_code?id=<%= entry[:id]%>" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="/delete_hab_code?id=<%= entry[:id]%>" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
                </td>
              </td>
              </tr> 
              </tr> 
            <% end %>
          <% end %>
        </tbody>
      </table>
  
</div><!--/container-->