<div class="container">
  
  <!-- upper section -->
  <div class="row">
    <div class="col-sm-2">
      <!-- left -->
      <h3><i class="glyphicon glyphicon-flash"></i> Links</h3> 

      <hr>
      
      <ul class="nav nav-stacked">
        <li><a href="/new_hab_code"><i class="glyphicon glyphicon-plus"></i> Add Hab Code</a></li>
        <li><a href="/workshops"><i class="glyphicon glyphicon-briefcase"></i> Workshops</a></li>
        <li><a href="/hab_codes"><i class="glyphicon glyphicon-bullhorn"></i> Hab Codes</a></li>
        <li><a href="/categories"><i class="glyphicon glyphicon-align-justify"></i> Categories</a></li>
    </div><!-- /span-3 -->
    <div class="col-sm-10">
      <!-- column 2 --> 
       <h3><i class="glyphicon gglyphicon-bullhorn"></i> &nbsp JMA Hab Codes</h3>  
       <hr>
        <!--<table class="table table-condensed table-bordered table-striped table-hover table-responsive" > -->
        <table class="table table-striped table-bordered table-striped table-hover">
         <thead>
          <tr>
            <th>#</th>
            <th >Hab Code</th>
            <th >Coach</th>
            <th >First Name</th>
            <th >Last Name</th>
            <th >Date Sent</th>
            <th >Registered</th>
            <th >Completed</th>
            <th >Debriefed</th>
            <th >Reports Sent</th>
            <th >Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @hab_codes != nil && @hab_codes.size > 0 %>
            <% @hab_codes.each do |entry| %>
              <tr>
                <td><%= entry[:id]%></td>
                <td><%= entry[:code] %></td>
                <td>Coach Name</td>
                <td><%= entry[:first_name] %></td>
                <td><%= entry[:last_name] %></td>
                <td><%= entry[:date_sent] %></td>
                <td><%= entry[:registered] %></td>
                <td><%= entry[:completed] %></td>
                <td><%= entry[:debriefed] %></td>
                <td><%= entry[:reports_sent] %></td>
                <td>
                <a href="/edit_hab_codeid=<%= entry[:id]%>" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="/delete_hab_code?id=<%= entry[:id]%>" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
                </td>
              </td>
              </tr> 
            <% end %> 
          <% end %> 
        </tbody>
      </table>
      </div>
    </div>
    <div class="row">  
  
</div><!--/container-->