<div class="container" style= "margin-bottom: 50px;">
  
  <!-- upper section -->
  <div class="row">
    <div class="col-sm-2">
      <!-- left -->
      <h3><i class="glyphicon glyphicon-flash"></i> Links</h3> 
      <hr>
      <ul class="nav nav-stacked">
        <li><a href="/arrow_payment_form"><i class="fa fa-credit-card"></i>&nbspArrow Quick Pay</a></li>
        <li><a href="/deposit_check_form"><i class="fa fa-money "></i>&nbspDeposit Check</a></li>
        <li><a href="/workshops"><i class="glyphicon glyphicon-briefcase"></i>&nbsp Workshops</a></li>
        <li><a href="/coaches"><i class="glyphicon glyphicon-bullhorn"></i>&nbsp Coaches</a></li>
        <li><a href="/categories"><i class="glyphicon glyphicon-align-justify"></i> &nbspCategories</a></li>
    </div><!-- /span-2 -->
    <div class="col-sm-4 col-md-offset-2">
      <h3><i class="fa fa-credit-card"></i> &nbsp Arrow QuickPay</h3>  
      <hr>
      <div class="row">
       <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">
              <i class="fa fa-credit-card pull-right"></i>
              <h4>Arrow QuickPay</h4>
            </div>
          </div>
          <div class="panel-body">
            <form class="form form-vertical" action="<%=@submit_callback%>" method="post" >  
              <fieldset>
                <br>
                <% if !@errors.empty? %>
                   <legend style="color: red;  font-weight: bold; font-size: 14px;"
                    <p>The Following Errors Were Encountered: </p>
                    <% @errors.each do |e| %>
                      <p><%=e%></p>
                    <% end %>
                  </legend>
                <% end %>
                <div class="control-group" >
                  <div class = "row">
                    <div class = "col-md-10">
                      <label class="control-label" for="textarea">Name</label> 
                      <input type="text" class="form-control" name="name" title="Enter Recipients Name" placeholder="Name" required >
                    </div>
                    <div class = "col-md-10">
                      <label class="control-label" for="textarea">Payment Amount</label>
                      <input type="text" class="form-control" name="amount"  title="Enter Payment Amount" placeholder="Amount" >
                    </div>
                    <div class = "col-md-10">
                      <label class="control-label" for="textarea">Category</label>  
                      <select name="category_name" class="form-control" class="form-control" style="width:100%; ">
                        <% categories.each do |category|%>         
                        <option value="<%= category.name %>"><%= category.name %></option>
                        <% end %>
                      </select>
                    </div>
                    <div class = "col-md-10">
                      <label class="control-label" for="textarea">Coach</label>  
                      <select name="coach_name" class="form-control" style="width:100%; ">
                        <% coaches.each do |coach|%>         
                          <option value="<%= coach.name %>"><%= coach.name %></option>
                        <% end %>
                      </select>
                    </div>

                  </div>
                  <input type="hidden" name="workshop_id" value = "<%= @workshop_id%>">
                </div>
              </fieldset>
              <hr>
              <div class="form-actions">
                <button type="submit" value="Submit" name="commit" class="btn btn-success">Save</button>
                <button type="reset" class="btn" onclick="history.go(-1);">Cancel</button>
              </div>
            </form>
          </div><!-- panel body -->
      </div><!-- panel default -->
      </div><!-- col sm 5 -->
    </div><!-- col sm 2-->
  </div><!-- row -->
</div><!--/container-->