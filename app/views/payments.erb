<div class="wrapper">
  <div >
<form class="form-inline form-horizontal well" action="/filter_payments" method="post">
<fieldset>

<!-- Form Name -->
<legend>Filters</legend>

<!-- Multiple Checkboxes (inline) -->
<div class="control-group">
  <label class="control-label" for="coach-checkbox">Coach</label>
  <div class="controls">
    <% coaches.each do |coach|%>   
    <label class="checkbox inline" for="coach-checkbox-0">
      <input type="checkbox" name="coach[]" value="<%= coach.id %>">
      <%= coach.name %>
    </label>
    <% end %>
  </div>
</div>
<br>
<div class="control-group">
  <label class="control-label" for="coach-checkbox">Categories</label>
  <div class="controls">
    <% categories.each do |category|%>  
    <label class="checkbox inline" for="coach-checkbox-0">
      <input type="checkbox" name="category[]" value="<%= category.id %>">
      <%= category.name %>
    </label>
    <% end %>
  </div>
</div>
<br>

<!-- Multiple Checkboxes -->
<div class="control-group">
  <label class="control-label" for="checkboxes">Transaction Type</label>
  <div class="controls">
    <label class="checkbox" for="checkboxes-0">
      <input type="checkbox" name="transaction[]" value="Credit Card">
      Credit Card
    </label>
    <label class="checkbox" for="checkboxes-1">
      <input type="checkbox" name="transaction[]"  value="Check">
      Check
    </label>
  </div>
</div>
<br>
</fieldset>
  <input type="submit" value="Submit" name="submit" class="btn btn-success"  >
</form>

  <h3>Payment Summary</h3>
    <table class="table table-condensed table-bordered table-striped table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Amount</th>
          <th>Coach</th>
          <th>Category</th>
        </tr>
      </thead>
      <tbody>
        <% if Payment.all_paid_entries != nil && Payment.all_paid_entries.size > 0 %>
          <% i = 1 %>
          <% total_amount=0 %>
          <% Payment.all_paid_entries.each do |entry| %>
            <tr>
              <td><%= i %></td>
              <td><%= entry[:name] %></td>
              <td>$<%= entry[:amount] %></td>
              <td><%= Coach.find_by_id(entry[:coach_id]).name %></td>
            <td><%= Category.find_by_id(entry[:category_id]).name %></td>
            </tr>
          <% i = i + 1 %>			
        <% end %>	
        <tr>
          <td>Total Amount:</td>
          <td></td>
          <td>$<%= Payment.total_payments %></td>
          <td></td>
          <td></td>
        </tr>	
        <% end %>	
      </tbody>
    </table>	
  	<br>

    <form action="/done_weekly_payments" method="post">
      <input type="submit" value="Done" name="done" class="btn btn-success"  >
    </form>
    <br> 
  </div>
</div>
