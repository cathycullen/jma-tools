<section id="forms" style="margin-left: 10%;">
  <div class="col-md-10">
    <br>
    <form class="form-horizontal well" action="<%= @preview_callback_method %>" method="post" >
      <fieldset>
        <legend><%= @template.humanize.titleize%> Template</legend>
        <div class="control-group" >
          <div class="col-md-12">

            <div clsss="row">
              <div class="col-md-5">
                <label class="control-label" for="textarea">Name</label> 
                <input type="text" class="form-control" name="name" title="Enter Recipients Name" placeholder="Name" required >
              </div>
              <div class="col-md-5">
                <label class="control-label" for="textarea">Email</label>
                <input type="text" class="form-control" name="email"  title="Enter Recipients Email" placeholder="Email" required >
              </div>            
            </div>

            <br>
            <div clsss="row">
              <div class="col-md-5">
                <input type="hidden" name="send_callback_method" value="<%= @preview_callback_method%>">
                <div class="form-actions">
                  <button type="submit" class="btn btn-success">Preview</button>
                  <button type="reset" class="btn">Cancel</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</section>