<section id="forms"  style="margin-left: 15%;">
    <div class="col-md-9"> 
    <br>
      <form class="form-horizontal well" action="<%=@callback_method %>" method="post" > 
        <fieldset>
          <legend>Create New Workshop Attendee</legend>
          <br>
          <% if !@errors.empty? %>
             <legend style="color: red;  font-weight: bold; font-size: 14px;"
              <p>The Following Errors Were Encountered: </p>
              <% @errors.each do |e| %>
                <p><%=e%></p>
              <% end %>
            </legend>
          <% end %>
          <div clsss="row">
            <div class="col-md-5">
              <label class="control-label" for="textarea">Name</label> 
              <input type="text" class="form-control" name="name" title="Enter Name" placeholder="Name" required >
            </div>
            <div class="col-md-5">
              <label class="control-label" for="textarea">Email</label>
              <input type="text" class="form-control" name="email"  title="Enter Email" placeholder="Email" required >
            </div>            
          </div>  
          <div clsss="row">
            <div class="col-md-5">
              <label class="control-label" for="textarea">Amount</label> 
              <input type="text" class="form-control" name="amount" title="Amount" placeholder="Amount" required >
            </div>
            <div class="col-md-5">
              <label class="control-label" for="textarea">Paid</label>
              <input type="text" class="form-control" name="paid"  title="Paid" placeholder="Paid" required >
              <input type="checkbox" class="checkthis" />
            </div>            
          </div>
         <input type="hidden" name="workshop_id" value = "<%= @workshop_id%>">
        </fieldset> 
        <div clsss="row">
            <hr>
            <div class="form-actions">
              <button type="submit" class="btn btn-success" title="Select to Save Attendee Information">Save</button>
              <button type="reset" class="btn" onclick="history.go(-1);">Cancel</button>
            </div>
          </div>
      </form>
    </div> 
</section>
