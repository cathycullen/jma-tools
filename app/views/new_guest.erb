<div class="container" style= "margin-bottom: 50px;">
  
  <!-- upper section -->
  <div class="row">
    <div class="col-sm-2">
      <!-- left -->
      <h3><i class="glyphicon glyphicon-flash"></i> Links</h3> 
      <hr>
      <ul class="nav nav-stacked">
        <li><a href="/new_workshop"><i class="glyphicon glyphicon-plus"></i> Add Workshop</a></li>
        <li><a href="/workshops"><i class="glyphicon glyphicon-briefcase"></i> Workshops</a></li>
        <li><a href="/coaches"><i class="glyphicon glyphicon-bullhorn"></i> Coaches</a></li>
        <li><a href="/categories"><i class="glyphicon glyphicon-align-justify"></i> Categories</a></li>
        <li><a href="/logs"><i class="glyphicon glyphicon-align-justify"></i> Logs</a></li>
    </div><!-- /span-2 -->
    <div class="col-sm-5">
      <h3><i class="glyphicon glyphicon-plus"></i> &nbsp Workshop Attendee</h3>  
      <hr>
      <div class="row">
       <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">
              <i class="glyphicon glyphicon-plus pull-right"></i>
              <h4>Add Workshop Attendee</h4>
            </div>
          </div>
          <div class="panel-body">
            <form class="form form-vertical" action="<%=@submit_callback%>" method="post" >  
              <fieldset>
                <br>
                <% if !@errors.empty? %>
                   <legend style="color: red;  font-weight: bold; font-size: 14px;"
                    <p>The Following Errors Were Encountered: </p>
                    <% @errors.each do |e| %>
                      <p><%=e%></p>
                    <% end %>
                  </legend>
                <% end %>
                <div class="control-group" >
                  <div class = "row">
                    <div class = "col-md-6">
                      <label class="control-label" for="textarea">Name</label> 
                      <input type="text" class="form-control" name="name"  title="Name" placeholder="Name" required >
                    </div>
                    <div class="col-md-6">
                      <label class="control-label" for="textarea">Client Type</label>  
                      <select name="client_type"  class="form-control" class="form-control" style="width:100%; ">
                        <% i = 0 %>
                        <% @workshop_guest_types.each do |client_type|%> 
                        <% if i == 0 %>        
                           <option value="<%= client_type %>" selected><%= client_type %></option>
                         <% else %>
                          <option value="<%= client_type %>"><%= client_type %></option>
                         <% end %>
                        <% end %>
                      </select>
                    </div>
                  </div>
                  <div class = "row">
                    <div class = "col-md-6">
                      <label class="control-label" for="textarea">Email</label>
                      <input type="text" class="form-control" name="email" title="Email"  placeholder="Email" >
                    </div> 
                    <div class = "col-md-6">
                      <label class="control-label" for="textarea">Amount</label>
                      <input type="text" class="form-control" name="amount" title="Amount"  placeholder="Amount" >
                    </div>   
                  </div>
                  <div class = "row">
                    <div class = "col-md-6">
                      <label class="control-label" for="textarea">Phone</label>
                      <input type="text" class="form-control" name="phone" title="Phone"  placeholder="Phone"  >
                    </div> 
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="fac fac-checkbox fac-success " style="font-size:1.25em; margin-top:15px;margin-left:15px;"><span></span>
                        <input id="paid" type="checkbox" value="false" name="paid" name="paid" 
                        
                        ><label for="paid">Paid?</label>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="fac fac-checkbox fac-success " style="font-size:1.25em; margin-top:15px;margin-left:15px;"><span></span>
                        <input id="email_sent" type="checkbox" value="false" name="email_sent" 
                        ><label for="email_sent">Email Sent?</label>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <div class="fac fac-checkbox fac-success " style="font-size:1.25em; margin-top:10px;margin-left:15px;"><span></span>
                        <input id="in_both" type="checkbox" value="false" name="in_both" 
                        
                        ><label for="in_both">In Both?</label>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="fac fac-checkbox fac-success " style="font-size:1.25em; margin-top:10px;margin-left:15px;"><span></span>
                        <input id="hw_complete" type="checkbox" value="false" name="hw_complete" 
                        
                        ><label for="hw_complete">HW Complete?</label>
                      </div>
                    </div>
                  </div>

                  <% if @workshop.workshop_type == ELI %>
                   <hr>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="fac fac-checkbox fac-success " style="font-size:1.25em; margin-top:10px;margin-left:15px;"><span></span>
                          <input id="eli_released" type="checkbox" value="false" name="eli_released" 
                          
                          ><label for="eli_released">ELI Released?</label>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="fac fac-checkbox fac-success " style="font-size:1.25em; margin-top:10px;margin-left:15px;"><span></span>
                          <input id="results_back" type="checkbox" value="false" name="results_back" 
                          
                          ><label for="results_back">Results Back?</label>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-6">
                        <div class="fac fac-checkbox fac-success " style="font-size:1.25em; margin-top:10px;margin-left:15px;"><span></span>
                          <input id="follow_up_email" type="checkbox" value="false" name="follow_up_email" 
                          
                          ><label for="follow_up_email">Follow Up Email?</label>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="fac fac-checkbox fac-success " style="font-size:1.25em; margin-top:10px;margin-left:15px;"><span></span>
                          <input id="results_prepared" type="checkbox" value="false" name="results_prepared" 
                          
                          ><label for="results_prepared">Results Prepared?</label>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="fac fac-checkbox fac-success " style="font-size:1.25em; margin-top:10px;margin-left:15px;"><span></span>
                          <input id="follow_up_session" type="checkbox" value="false" name="follow_up_session" 
                          
                          ><label for="follow_up_session">Follow up Session?</label>
                        </div>
                      </div>
                    </div>

                  <% end %>
                  <div class = "row">
                    <div class = "col-md-12">
                      <label class="control-label" for="textarea">Lunch</label>
                      <textarea type="text" class="form-control" rows="4" name="lunch" title="Email"  placeholder="Place Lunch Order Here"  ></textarea>
                    </div> 
                  </div>
                  <div class = "row">
                    <div class = "col-md-12">
                      <label class="control-label" for="textarea">Notes</label>
                      <textarea type="text" class="form-control" rows="4" name="notes" title="Notes"  placeholder="Additional Notes"  ></textarea>
                    </div> 
                  </div>
                  <input type="hidden" name="workshop_id" value = "<%= @workshop_id%>">
                </div>
              </fieldset>
              <hr>
              <div class="form-actions">
                <button type="submit" value="Submit" name="commit" class="btn btn-success">Save</button>
                <button type="reset" class="btn" onclick="history.go(-1);">Cancel</button>
              </div>
            </form>
          </div><!-- panel body -->
      </div><!-- panel default -->
      </div><!-- col sm 5 -->
    </div><!-- col sm 2-->
  </div><!-- row -->
</div><!--/container-->