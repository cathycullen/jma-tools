<section id="forms" style="margin-left: 10%;">
    <div class="col-md-10">
      <br>
      <form class="form-horizontal well" action="<%= @callback_method %>" method="post" >
        <fieldset>
          <legend>Generate Client Welcome Email</legend>
          <div class="control-group" >
            <div class="col-md-12">

              <div clsss="row">
                <div class="col-md-5">
                  <label class="control-label" for="textarea">Name</label> 
                  <input type="text" class="form-control" name="name" title="Enter Recipients Name" placeholder="Name" required >
                </div>
                <div class="col-md-5">
                  <label class="control-label" for="textarea">Email</label>
                  <input type="text" class="form-control" name="email"  title="Enter Recipients Email" placeholder="Email" required >
                </div>            
              </div>

              <div clsss="row">
                <div class="col-md-5">
                  <label class="control-label" for="textarea">Appointment Date</label>
                  <input type="text" class="form-control" name="appt_date"  title="Enter Appt Date" placeholder="Appt Date" id="dp1" > 
                </div>
                <div class="col-md-5">
                  <label class="control-label" for="textarea">Payment Due Date</label>
                 <input type="text" class="form-control" name="payment_date"  title="Enter Payment Due Date" placeholder="Payment Date" id="dp2" > 
                </div>            
              </div>
              
              <div clsss="row">
                <div class="col-md-4">
                  <label class="control-label" >Start Time</label>
                    <select class="form-control" name="appt_start">
                    <% tp = [[5, 7, "am"], [12, 1, "pm"], [1, 10, "pm"]]  %>
                    <% i =0 %>
                    <% 3.times  do %>
                      <% time_period = tp[i] %>
                      <% start_hour= time_period[0] %>
                      <% hours = time_period[1] %>
                      <% ampm = time_period[2] %>
                      <% hours.times do %>
                        <% mm = 0 %>
                        <% 4.times do %> 
                          <option value="<%= start_hour %>:<%=sprintf( "%02d", mm )%> <%= ampm %>"><%= start_hour %>:<%=sprintf( "%02d", mm )%> <%= ampm %></option>
                          <% mm = mm +15 %>
                        <% end %>
                        <% start_hour= start_hour + 1%>
                      <% end %>
                      <% i = i + 1 %>
                    <% end %>
                    </select>
                  </div>
                  <div class="col-md-4">
                    <label class="control-label" >End Time</label>
                    <select class="form-control" name="appt_end">
                    <% tp = [[5, 7, "am"], [12, 1, "pm"], [1, 10, "pm"]]  %>
                    <% i =0 %>
                    <% 3.times  do %>
                      <% time_period = tp[i] %>
                      <% start_hour= time_period[0] %>
                      <% hours = time_period[1] %>
                      <% ampm = time_period[2] %>
                      <% hours.times do %>
                        <% mm = 0 %>
                        <% 4.times do %> 
                          <option value="<%= start_hour %>:<%=sprintf( "%02d", mm )%> <%= ampm %>"><%= start_hour %>:<%=sprintf( "%02d", mm )%> <%= ampm %></option>
                          <% mm = mm +15 %>
                        <% end %>
                        <% start_hour= start_hour + 1%>
                      <% end %>
                      <% i = i + 1 %>
                    <% end %>
                    </select>
                  </div>  
                  <div class="col-md-4">
                    <label class="control-label" for="textarea">Payment Amount</label>
                    <input type="text" class="form-control" name="amount"  title="Enter Payment Amount" placeholder="Optional Amount" >
                  </div>
                </div>
              
              <div clsss="row">
                <div class="col-md-4">
                  <label class="control-label" for="textarea">Coach</label>  
                  <select name="coach_name" style="width:100%; ">
                    <% coaches.each do |coach|%>         
                      <option value="<%= coach.name %>"><%= coach.name %></option>
                    <% end %>
                  </select>
                </div>  
                <div class="col-md-4">
                  <label class="control-label" for="textarea">Location</label>            
                  <select name="location" style="width:100%; ">
                  <option value="Downtown">Downtown</option>
                  <option value="Northside">Northside</option>
                  </select>
                </div>
              </div>

                <div class="col-md-4">
                  <label class="control-label" for="textarea">Category</label>  
                  <select name="category" style="width:100%; ">
                    <% categories.each do |category|%>         
                      <option value="<%= category.name %>"><%= category.name %></option>
                    <% end %>
                  </select>
                </div>
              </div>
              <br>

              <div clsss="row">
                <div class="col-md-4">
                </div>
              </div>
              <br>
                <label class="control-label" for="textarea">Text 1</label>
                <textarea class="form-control" name="text1" rows="3"><%=@text1 %>
                </textarea>
                <label class="control-label" for="textarea">Text 2</label>
                <textarea class="form-control" name="text2" rows="3"><%=@text2 %>
                </textarea>
                <label class="control-label" for="textarea">Text 3</label>
                <textarea class="form-control" name="text3" rows="3"><%=@text3 %>
                </textarea>
                <label class="control-label" for="textarea">Text 4</label>
                <textarea class="form-control" name="text4" rows="7"><%=@text4 %>
                </textarea>
                <label class="control-label" for="textarea">Text 5</label>
                <textarea class="form-control" name="text5" rows="7"><%=@text5 %>
                </textarea>
                <label class="control-label" for="textarea">Closing Text</label>
                <textarea class="form-control" name="closing-text" rows="2"><%=@closing_text %>
                </textarea>

              <hr>

              <div class="form-actions">
                <button type="submit" class="btn btn-success">Preview</button>
                <button type="reset" class="btn">Cancel</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div>
</section>
