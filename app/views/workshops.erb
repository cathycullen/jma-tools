<div class="container">
  
  <!-- upper section -->
  <div class="row">
    <div class="col-sm-2">
      <!-- left -->
      <h3><i class="glyphicon glyphicon-flash"></i> Links</h3> 

      <hr>
      
      <ul class="nav nav-stacked">
        <li><a href="/new_workshop"><i class="glyphicon glyphicon-plus"></i> Add Workshop</a></li>
        <li><a href="/workshops"><i class="glyphicon glyphicon-briefcase"></i> Workshops</a></li>
        <li><a href="/coaches"><i class="glyphicon glyphicon-bullhorn"></i> Coaches</a></li>
        <li><a href="/categories"><i class="glyphicon glyphicon-align-justify"></i> Categories</a></li>
        <li><a href="/logs"><i class="glyphicon glyphicon-align-justify"></i> Logs</a></li>
    </div><!-- /span-3 -->
    <div class="col-sm-10">
      <!-- column 2 --> 
       <h3><i class="glyphicon glyphicon-briefcase"></i> &nbsp Upcoming Workshops</h3>  
       <hr>
        <!--<table class="table table-condensed table-bordered table-striped table-hover table-responsive" > -->
        <table class="table table-striped table-bordered table-striped table-hover">
         <thead>
          <tr>
            <th>#</th>
            <th style="width: 300px;">Workshop Date</th>
            <th style="width: 300px;">Workshop Name</th>
            <th style="width: 300px;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @workshops != nil && @workshops.size > 0 %>
            <% @workshops.each do |entry| %>
              <tr>
                <td><%= entry[:id]%></td>
                <td><%= entry[:workshop_date].strftime("%m/%d/%Y") %></td>
                <td><%= entry[:name] %></td>
                <td>
                <a href="/workshop_report?id=<%= entry[:id]%>"  class="btn btn-success btn-sm">
                    <span class="fa fa-eye"></span>
                </a>
                <a href="/edit_workshop?id=<%= entry[:id]%>"  class="btn btn-primary btn-sm">
                    <span class="fa fa-pencil"></span>
                </a>
                <a href="/delete_workshop?id=<%= entry[:id]%>"  class="btn btn-danger btn-sm">
                    <span class="fa fa-trash"></span>
                </a>
                <a href="/workshop_lunch_report?id=<%= entry[:id]%>"  class="btn btn-primary btn-sm">
                    <span class="fa fa-cutlery"></span>
                </a>
                <a href="/workshop_lunch_report?id=<%= entry[:id]%>"  class="btn btn-success btn-sm">
                    <span class="fa fa-envelope"></span>
                </a>
              </td>
              </tr> 
            <% end %> 
          <% end %> 
        </tbody>
      </table>
      </div>
    </div>
    <div class="row">  
  
</div><!--/container-->