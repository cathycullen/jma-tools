    </div><!-- /span-3 -->
    <div class="col-sm-10">
      <!-- column 2 --> 
       <h3><i class="fa fa-list-alt"></i> &nbsp Transaction Log</h3>  
       <hr>
        <!--<table class="table table-condensed table-bordered table-striped table-hover table-responsive" > -->
        <table class="table table-striped table-bordered table-striped table-hover">
         <thead>
          <tr>
            <th>#</th>
            <th >Transaction Date</th>
            <th>Entry</th>
          </tr>
        </thead>
        <tbody>
          <% if @logs != nil && @logs.size > 0 %>
            <% @logs.each do |entry| %>
              <tr>
                <td><%= entry[:id]%></td>
                <td><%= entry[:entry_date].strftime("%m/%d/%Y")  %></td>
                <td><%= entry[:entry] %></td>
              </tr> 
            <% end %> 
          <% end %> 
        </tbody>
      </table>
      </div>
    </div>
    <div class="row">  
  
</div><!--/container-->