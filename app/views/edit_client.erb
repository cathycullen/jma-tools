<div class="container" style= "margin-bottom: 50px;">
  
  <!-- upper section -->
  <div class="row">
    <div class="col-sm-2">
      <!-- left -->
      <h3><i class="glyphicon glyphicon-flash"></i> Links</h3> 
      <hr>
      <ul class="nav nav-stacked">
        <li><a href="/clients"><i class="fa fa-group"></i>&nbspClients</a></li>
        <li><a href="/password"><i class="fa fa-dollar"></i>&nbspPayments</a></li>
        <li><a href="/workshops"><i class="glyphicon glyphicon-briefcase"></i> Workshops</a></li>
        <li><a href="/coaches"><i class="glyphicon glyphicon-bullhorn"></i> Coaches</a></li>
        <li><a href="/categories"><i class="glyphicon glyphicon-align-justify"></i> Categories</a></li>
        <li><a href="/logs"><i class="glyphicon glyphicon-align-justify"></i> Logs</a></li>
    </div><!-- /span-2 -->
    <div class="col-sm-7  col-sm-offset-1">
      <h3><i class="glyphicon glyphicon-pencil"></i> &nbsp Client </h3>  
      <hr>
      <div class="row">
       <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">
              <i class="glyphicon glyphicon-pencil pull-right"></i>
              <h4>Edit Client</h4>
            </div>
          </div>
          <div class="panel-body">
            <form class="form form-vertical" action="<%=@submit_callback%>" method="post" >  
              <fieldset>
                <br>
                <div class="control-group" >
                  <div class = "row">
                    <div class = "col-md-6">
                      <label class="control-label" for="textarea">Name</label> 
                      <input type="text" class="form-control" name="name"  title="Name" placeholder="Name" value="<%=@client.name%>" required >
                    </div>
                    <div class="col-md-6">
                      <label class="control-label" for="textarea">Email</label>
                      <input type="text" class="form-control" name="email" title="Email"  placeholder="Email" value="<%=@client.email%>" >
                    </div> 
                  </div>
                  <div class = "row">
                    <div class = "col-md-6">
                      <label class="control-label" for="textarea">Phone</label>
                      <input type="text" class="form-control" name="phone" title="Phone"  placeholder="Phone" value="<%=@client.phone%>" >
                    </div> 
                    <div class = "col-md-6">
                      <label class="control-label" for="textarea">Address</label>
                      <input type="text" class="form-control" name="address" title="Address"  placeholder="Address" value="<%=@client.address%>" >
                    </div>
                  </div>
                  <div class = "row">
                    <div class = "col-md-6">
                      <label class="control-label" for="textarea">City</label>
                      <input type="text" class="form-control" name="city" title="City"  placeholder="City" value="<%=@client.city%>" >
                    </div>   
                    <div class = "col-md-3">
                      <label class="control-label" for="textarea">State</label>
                      <input type="text" class="form-control" name="state" title="City"  placeholder="State" value="<%=@client.state%>" >
                    </div>   
                    <div class = "col-md-3">
                      <label class="control-label" for="textarea">Zip</label>
                      <input type="text" class="form-control" name="zip" title="zip"  placeholder="Zip" value="<%=@client.zip%>" >
                    </div>   
                  </div>
                  <div class = "row">
                    <div class = "col-md-10">
                      <label class="control-label" for="textarea">Category</label>  
                      <select name="category_id" class="form-control" class="form-control" style="width:100%; ">
                        <% categories.each do |category|%>         
                        <option value="<%= category.id %>"><%= category.name %></option>
                        <% end %>
                      </select>
                    </div>
                  </div>
                  <div class = "row">
                    <div class = "col-md-10">
                      <label class="control-label" for="textarea">Coach</label>  
                      <select name="coach_id" class="form-control" style="width:100%; ">
                        <% coaches.each do |coach|%>         
                          <option value="<%= coach.id %>"><%= coach.name %></option>
                        <% end %>
                      </select>
                    </div>
                  </div> 

                  <div class = "row">
                    <div class = "col-md-10">
                      <label class="control-label" for="textarea">Type</label>  
                      <select name="client_type" class="form-control" class="form-control" style="width:100%; ">
                        <% @client_types.each do |client_type|%>        
                          <% if @client.client_type == client_type %>       
                              <option value="<%= client_type %>" name="client_type" selected><%= client_type %></option>
                            <% else %>
                              <option value="<%= client_type %>" name="client_type" ><%= client_type %></option>
                            <% end %>
                        <% end %>
                      </select>
                    </div>
                  </div>        
                  <input type="hidden" name="id" value = "<%= @client.id%>">
                </div>
              </fieldset>
              <hr>
              <div class="form-actions">
                <button type="submit" value="Submit" name="commit" class="btn btn-success">Save</button>
                <button type="reset" class="btn" onclick="history.go(-1);">Cancel</button>
              </div>
            </form>
          </div><!-- panel body -->
      </div><!-- panel default -->
      </div><!-- col sm 5 -->
    </div><!-- col sm 2-->
  </div><!-- row -->
</div><!--/container-->