<div class="container" style= "margin-bottom: 50px;">
  <!-- upper section -->
  <div class="row">
    <div class="col-sm-2">
    </div><!-- /span-2 -->
    <div class="col-sm-4 col-md-offset-2">
      <hr>
      <div class="row">
       <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">
              <i class="fa fa-lock  pull-right"></i>
              <h4>This Page is Password Protected</h4>
            </div>
          </div>
          <div class="panel-body">
      <form class="form form-vertical" action="<%=@preview_callback_method %>" method="post" > 
      <fieldset>
        <div class="control-group" >
          <div class = "row">
            <div class = "col-md-10">
              <label class="control-label" for="textarea">Please Enter Your Password</label> 
              <input type="text" class="form-control" name="password" value="<%= @password %>"required >
            </div>
          </div>  
          <hr>
            <div class="form-actions">
              <button class="btn btn-success" style="margin-top: 15px;">Submit</button>
            </div>
          </div>
        </fieldset>
      </form>
    </div><!-- col sm 2-->
  </div><!-- row -->
</div><!--/container-->

