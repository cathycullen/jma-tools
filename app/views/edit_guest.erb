<div class="container" style= "margin-bottom: 50px;">
  
  <!-- upper section -->
  <div class="row">
    <div class="col-sm-2">
      <!-- left -->
      <h3><i class="glyphicon glyphicon-flash"></i> Links</h3> 
      <hr>
      <ul class="nav nav-stacked">
        <li><a href="/new_workshop"><i class="glyphicon glyphicon-plus"></i> Add Workshop Attendee</a></li>
        <li><a href="/new_workshop"><i class="glyphicon glyphicon-plus"></i> Add Expense</a></li>
        <li><a href="/new_workshop"><i class="glyphicon glyphicon-plus"></i> Add Workshop</a></li>
        <li><a href="/workshops"><i class="glyphicon glyphicon-briefcase"></i> Workshops</a></li>
        <li><a href="/coaches"><i class="glyphicon glyphicon-bullhorn"></i> Coaches</a></li>
        <li><a href="/categories"><i class="glyphicon glyphicon-align-justify"></i> Categories</a></li>
    </div><!-- /span-2 -->
    <div class="col-sm-10">
      <h3><i class="glyphicon glyphicon-pencil"></i> &nbsp Workshop Attendee</h3>  
      <hr>
      <div class="row">
       <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">
              <i class="glyphicon glyphicon-wrench pull-right"></i>
              <h4>Edit Workshop Attendee</h4>
            </div>
          </div>
          <div class="panel-body">
            <form class="form form-vertical" action="<%=@callback_method%>?id=<%= @guest.id %>" method="post" >  
             <fieldset>
                <br>
                <% if !@errors.empty? %>
                   <legend style="color: red;  font-weight: bold; font-size: 14px;"
                    <p>The Following Errors Were Encountered: </p>
                    <% @errors.each do |e| %>
                      <p><%=e%></p>
                    <% end %>
                  </legend>
                <% end %>
                <div clsss="row">
            <div class="col-md-5">
              <label class="control-label" for="textarea">Name</label> 
              <input type="text" class="form-control" name="name" title="Enter Name" placeholder="Name" value="<%=@guest.name%>" required >
            </div>
            <div class="col-md-5">
              <label class="control-label" for="textarea">Email</label>
              <input type="text" class="form-control" name="email"  title="Enter Email" placeholder="Email" value="<%=@guest.email%>" required >
            </div>            
          </div>  
          <div clsss="row">
            <div class="col-md-5">
              <label class="control-label" for="textarea">Amount</label> 
              <input type="text" class="form-control" name="amount" title="Amount" placeholder="Amount" value="<%=@guest.amount%>" required >
            </div>
            <div class="col-md-5">
            <label class="control-label" for="textarea">Paid</label>  
              <select name="paid"  class="form-control" class="form-control" style="width:100%; ">
                <% if @guest.paid == true %>
                  <option value="true" selected >Yes</option>
                  <option value="false">No</option>
                  <% else %>
                  <option value="true">Yes</option>
                  <option value="false" selected>No</option>
                  <% end %>
              </select>
            </div>            
          </div>
           <div clsss="row">
            <div class="col-md-5">
            <label class="control-label" for="textarea">Client Type</label>  
              <select name="client_type"  class="form-control" class="form-control" style="width:100%; ">
                <% if @guest.client_type.nil? %>
                <% @guest.client_type = @client_types[0] %>
                <% end %>
                <% @client_types.each do |client_type|%>   
                  <% if @guest.client_type == client_type %>       
                    <option value="<%= client_type %>" name="client_type" selected><%= client_type %></option>
                  <% else %>
                    <option value="<%= client_type %>" name="client_type" ><%= client_type %></option>
                  <% end %>
                <% end %>
              </select>
            </div>
            <div class="col-md-9">
              <label class="control-label" for="textarea">Lunch</label>
              <textarea class="form-control" rows="4" id="lunch" name="lunch"  title="Lunch" placeholder="Lunch" value="<%=@guest.lunch%>" ><%=@guest.lunch%></textarea>
            </div>            
          </div>
         <input type="hidden" name="workshop_id" value = "<%= @guest.workshop_id%>">
              </fieldset>
              <hr>
                <div class="form-actions">
                  <button type="submit" class="btn btn-success" title="Select to Save Attendee Information">Save</button>
                  <button type="reset" class="btn" onclick="history.go(-1);">Cancel</button>
                </div>
                <input type="hidden" name="id" value="<%= @guest.id%>">
            </form>
          </div><!-- panel body -->
      </div>
     
      </div><!-- row -->
    </div><!-- col sm 10-->
       <hr>
  </div><!-- row -->
  
</div><!--/container-->