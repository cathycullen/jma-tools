
<section id="forms" style="margin-left: 10%;">
  <div class="col-md-10">
    <br>
    <form class="form-horizontal well" action="<%= @submit_callback %>" method="post" >
      <fieldset>
        <legend>Add Coach</legend>
        <div class="control-group" >
          <div class="col-md-12">

            <div clsss="row">
              <div class="col-md-5">
                <label class="control-label" for="textarea">Name</label> 
                <input type="text" class="form-control" name="name" title="Enter Coach Name" placeholder="Name" required >
              </div>         
              <div class="col-md-5">
                <label class="control-label" for="textarea">Email</label> 
                <input type="text" class="form-control" name="email" title="Enter Coach Email" placeholder="Email" required >
              </div>         
              <div class="col-md-5">
                <label class="control-label" for="textarea">Name</label> 
                <input type="text" class="form-control" name="phone" title="Enter Coach Phone" placeholder="Phone" required >
              </div>         
            </div>
            <br>
            <div clsss="row">
              <div class="col-md-5">
                <div class="form-actions">
                  <button type="submit" value="Submit" name="commit" class="btn btn-success">Save</button>
                  <button type="reset" value="Cancel" name="cancel" class="btn">Cancel</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</section>
