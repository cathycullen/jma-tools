<div class="container" style= "margin-bottom: 50px;">
  
  <div class="row">
    
    <div class="col-md-10 ">
      <h3><i class="fa fa-users"></i> &nbsp <%= @template.humanize.titleize%> Template</h3>  
      <div class="row">
       <div class="panel panel-default">
          <div class="panel-heading">
            <div class="panel-title">
              <i class="fa fa-paw pull-right"></i>
              <h4><%= @template.humanize.titleize%> Template</h4>
            </div>
          </div><!-- panel-heading -->
          <div class="panel-body">
            <form class="form form-vertical" action="<%= @preview_callback_method %>" method="post" >  
              <fieldset>
                <br>
                <div class="control-group" >

                <div clsss="row">
                  <div class="col-md-3">
                    <label class="control-label" for="textarea">Homework Due Date</label>
                    <input type="text" class="form-control" name="appt_date"  value="<%=@workshop.workshop_date.strftime("%x")%>"title="Enter Workshop Date" placeholder="Workshop Date" id="dp1" > 
                  </div>
                  <div class="col-md-2">
                   <label class="control-label" >Time</label>
                    <select class="form-control" name="appt_start">
                      <option value="10:00 am">10:00 am</option>
                      <option value="11:00 am">11:00 am</option>
                      <option value="12:00 pm" selected >12:00 pm</option>
                      <option value="1:00 pm">1:00 pm</option>
                      <option value="2:00 pm">2:00 pm</option>
                      <option value="3:00 pm">3:00 pm</option>
                    </select>     
                  </div>  
                  <div class="col-md-2">
                    <label class="control-label" for="textarea">Email</label>
                    <input type="text" class="form-control" name="email"  title="Enter Recipients Email" placeholder="Email" >
                  </div>   
                  <div class="col-md-5">
                    <div class="fac fac-checkbox fac-danger " style="font-size:1.5em; margin-top:25px;"><span></span>
                      <input id="box-example-2" type="checkbox" value="1" name="email_all" checked><label for="box-example-2">Send To All Participants?</label>
                    </div>      
                  </div>
                </div>


              <div clsss="row">
                <div class="col-md-12">
                <label class="control-label" for="textarea">Greeting</label>
                <textarea class="form-control" name="greeting" rows="2"><%=@greeting %>
                </textarea>
                </div>
              </div> <div clsss="row">
                <div class="col-md-12">
                <label class="control-label" for="textarea">Text1</label>
                <textarea class="form-control" name="text1" rows="2"><%=@text1 %>
                </textarea>
                </div>
              </div>
              <div clsss="row">
                <div class="col-md-12">
                <label class="control-label" for="textarea">Text2</label>
                <textarea class="form-control" name="text2" rows="7"><%=@text2 %>
                </textarea>
                </div>
              </div>
              <div clsss="row">
                <div class="col-md-12">
                <label class="control-label" for="textarea">Text3</label>
                <textarea class="form-control" name="text3" rows="6"><%=@text3 %>
                </textarea>
                </div>
              </div>
              <div clsss="row">
                <div class="col-md-12">
                <label class="control-label" for="textarea">Closing</label>
                <textarea class="form-control" name="closing_text" rows="3"><%=@closing_text %>
                </textarea>
                </div>
              </div>
                <input type="hidden" name="template" value="<%= @template %>">
                <input type="hidden" name="greeting" value="<%= @greeting %>">
                <br>
              <br>
              <hr>
              </fieldset>
               <hr>
              <div clsss="row">
                <input type="hidden" name="send_callback_method" value="<%= @send_callback_method%>">
                <input type="hidden" name="workshop_id" value="<%= @workshop.id%>">
                <div class="form-actions">
                  <button type="submit" class="btn btn-success">Preview</button>
                  <button type="reset" class="btn">Cancel</button>
                </div>
              </div><!-- row -->
            </form>
          </div><!-- panel-body -->
        </div><!-- panel-default -->
      </div><!-- row -->
    </div><!-- col-md-10 -->
  </div><!-- row -->
</div>