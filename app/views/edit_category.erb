<section id="forms"  style="margin-left: 15%;">
    <div class="col-md-6">
    <br>
      <form class="form-horizontal well" action="<%=@callback_method%>?id=<%= @category.id %>" method="post" >   
        <fieldset>
          <legend>Edit Category</legend>
          <br>
          <% if !@errors.empty? %>
             <legend style="color: red;  font-weight: bold; font-size: 14px;"
              <p>The Following Errors Were Encountered: </p>
              <% @errors.each do |e| %>
                <p><%=e%></p>
              <% end %>
            </legend>
          <% end %>
          <div class = "row">
            <div class = "col-md-12">
              <div class="control-group" >
                <label class="control-label" for="textarea">Name</label> 
                <input type="text" class="form-control" name="name" value="<%=@category.name%>" required >
              </div>
            </div>
          </div>
        <hr>
        <div class="form-actions">
          <button type="submit" value="Submit" name="commit" class="btn btn-success" title="Select to Save Category Information">Save</button>
          <button type="reset" class="btn" onclick="history.go(-1);">Cancel</button>
        </div>
        <input type="hidden" name="id" value="<%= @category.id%>">
      </fieldset>
    </form>
  </div>
</section>
