<div class="container">
  
  <!-- upper section -->
  <div class="row">
    <div class="col-sm-2">
      <!-- left -->
      <h3><i class="glyphicon glyphicon-flash"></i> Links</h3> 

      <hr>
      
      <ul class="nav nav-stacked">
        <li><a href="/new_category"><i class="glyphicon glyphicon-plus"></i> Add Category</a></li>
        <li><a href="/workshops"><i class="glyphicon glyphicon-briefcase"></i> Workshops</a></li>
        <li><a href="/coaches"><i class="glyphicon glyphicon-bullhorn"></i> Coaches</a></li>
        <li><a href="/categories"><i class="glyphicon glyphicon-align-justify"></i> Categories</a></li>
    </div><!-- /span-3 -->
    <div class="col-sm-10">
      <!-- column 2 --> 
       <h3><i class="glyphicon glyphicon-align-justify"></i> &nbsp JMA Categories</h3>  
       <hr>
        <!--<table class="table table-condensed table-bordered table-striped table-hover table-responsive" > -->
        <table class="table table-striped table-bordered table-striped table-hover">
         <thead>
          <tr>
            <th>#</th>
            <th style="width: 300px;">Category Name</th>
            <th style="width: 300px;">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if @categories != nil && @categories.size > 0 %>
            <% @categories.each do |entry| %>
              <tr>
                <td><%= entry[:id]%></td>
                <td><%= entry[:name] %></td>
                <td>
                <a href="/edit_category?id=<%= entry[:id]%>" class="btn btn-primary btn-sm">
                    <span class="glyphicon glyphicon-pencil"></span>
                </a>
                <a href="/delete_category?id=<%= entry[:id]%>" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-trash"></span>
                </a>
                </td>
              </td>
              </tr> 
            <% end %> 
          <% end %> 
        </tbody>
      </table>
      </div>
    </div>
    <div class="row">  
  
</div><!--/container-->