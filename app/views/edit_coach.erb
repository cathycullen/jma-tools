<section id="forms"  style="margin-left: 15%;">
    <div class="col-md-10">
    <br>
      <form class="form-horizontal well" action="<%=@callback_method%>?id=<%= @coach.id %>" method="post" >   
        <fieldset>
          <legend>Edit Coach</legend>
          <br>
          <% if !@errors.empty? %>
             <legend style="color: red;  font-weight: bold; font-size: 14px;"
              <p>The Following Errors Were Encountered: </p>
              <% @errors.each do |e| %>
                <p><%=e%></p>
              <% end %>
            </legend>
          <% end %>
          <div class = "row">
            <div class = "col-md-3">
              <div class="control-group" >
                <label class="control-label" for="textarea">Name</label> 
                <input type="text" class="form-control" name="name" value="<%=@coach.name%>" required >
              </div>
            </div>
            <div class = "col-md-3">
              <label class="control-label" for="textarea">Email</label>
              <input type="text" class="form-control" name="email"  title="Enter Coach Date" value="<%=@coach.email%>" placeholder="Coach Date" id="dp1" >
            </div>  
            <div class = "col-md-3">
              <label class="control-label" for="textarea">Phone</label>
              <input type="text" class="form-control" name="phone"  title="Enter Coach Date" value="<%=@coach.phone%>" placeholder="Coach Date" id="dp1" >
            </div>  
          </div>
        <hr>
        <div class="form-actions">
          <button type="submit" value="Submit" name="commit" class="btn btn-success" title="Select to Save Coach">Save</button>
          <button type="reset" class="btn" onclick="history.go(-1);">Cancel</button>
        </div>
        <input type="hidden" name="id" value="<%= @coach.id%>">
      </fieldset>
    </form>
  </div>
</section>
